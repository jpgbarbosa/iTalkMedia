<%- model_class = Music -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="accordion">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Music
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse in">
      <div class="accordion-inner">
        <dl class="dl-horizontal">
          <dt><strong>Name:</strong></dt>
          <dd><%= @music["name"] %></dd>
          <dt><strong>Artist:</strong></dt>
          <dd><%= @music["name"] %></dd>
          <dt><strong>Year:</strong></dt>
          <dd><%= @music["name"] %></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
        More Details
      </a>
    </div>
    <div id="collapseTwo" class="accordion-body collapse">
      <div class="accordion-inner">
        <dl class="dl-horizontal">

          <dt><strong>Length:</strong></dt>
          <dd><%= @music["name"] %></dd>
          <dt><strong>Number:</strong></dt>
          <dd><%= @music["name"] %></dd>
          <dt><strong>Genre:</strong></dt>
          <dd><%= @music["name"] %></dd>
          <dt><strong>Bitrate:</strong></dt>
          <dd><%= @music["name"] %></dd>

        </dl>
      </div>
    </div>
  </div>

  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
        Lyrics
      </a>
    </div>
    <div id="collapseThree" class="accordion-body collapse">
      <div class="accordion-inner">
        <dl class="dl-horizontal">

          ceeeenas ceeenas cenas ceeeenas !

        </dl>

      </div>
    </div>
  </div>

</div>





<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              musics_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_music_path(@music), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              music_path(@music),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

