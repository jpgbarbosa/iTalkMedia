<div class="page-header">
  <h1>Musics</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Album</th>
      <th>Music</th>
      <th>Genre</th>
      <th>Length</th>
    </tr>
  </thead>
  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music[:artist] %></td>
        <td><%= music[:album] %></td>
        <td><%= music[:name] %></td>
        <% if music[:genre]!=nil && music[:genre].length > 0 %>
                <td><%= music[:genre][0] %></td>
            <%else%>
                <td> undefined </td>
            <%end%>
        
        <td><%= music[:length] %></td>
        <td>
          <!-- MARTELANCO WARNING :P -->
          <% link = "/musics/"+music[:id].to_s.split('/').last %>
          <% id_no = link.split('#').last %>
          <% base = link.split('#').first %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      base+'?id_no='+id_no, :class => 'btn btn-mini btn-primary' %> 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      "edit_music_path(music)", :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      "cenas a ver",
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
                  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_music_path,
            :class => 'btn btn-primary' %>
